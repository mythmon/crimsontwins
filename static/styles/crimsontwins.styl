.content {
  transition: opacity 2s;
  -moz-transition: opacity 2s;
  -webkit-transition: opacity 2s;

  .imgbg {
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    width: 100%;
    height: 100%;
  }

  iframe {
    overflow: hidden;
    border: 0;
    background: #fff;
  }
}

.overlay {
  background: url(/img/debut_dark.png);
  bottom: 0;
  left: 0;
  overflow: hidden;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 2;

  .content {
    width: 100%;
    height: calc(100% - 3em);

    iframe {
      width: 100%;
      height: 100%;
    }
  }

  .meta {
    background: #000;
    font-size: 2em;
    line-height: 1em;
    color: #fff;
    padding: 0.25em;
    vertical-align: middle;
    word-wrap: break-word;

    span:not(:first-child) {
      border-left: 1px solid #fff;
      margin-left: 0.5em;
      padding-left: 0.5em;

      &.url {
        font-size: 0.5em;
      }
    }
  }
}

.selector {
  list-style: none;
  margin: 0;
  padding: 0;

  .preview {
    position: relative;
    display: inline-block;
    margin: 10px;

    h1 {
      font-size: 1em;
      margin: 0;
      background: #444;
      color: #fff;
      text-align: center;

      button.close {
        float: right;
      }
    }

    .content {
      position: relative;
      width: 240px;
      height: 180px;
      border: 1px solid #555;
      background: url(/img/debut_dark.png);

      > i {
        display: block;
        left: 50%;
        position: absolute;
        top: 50%;
        transform: translate(-50%, -50%) scale(2);
      }

      &:hover {
        > i {
          color: #5B5;
          border-color: #5B5;
        }
      }

      iframe {
        transform-origin: 0, 0;
        transform: scale(0.2);
        width: 500%;
        height: 500%;
        position: absolute;
        pointer-events: none;
      }
    }

    .click-target {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      cursor: pointer;
    }
  }
}

i {
  display: inline-block;
  font-family: Arial, sans-serif;

  &.add {
    color: #ABA;
    border: 4px solid #ABA;
    border-radius: 32px;
    width: 32px;
    height: 32px;
    font-size: 42px;
    line-height: 35px;
    text-align: center;
    font-weight: bold;

    &:before {
      content: "+";
      font-style: normal;
    }
  }

  &.hydra {
    color: #ABA;
    border: 6px solid #ABA;
    width: 32px;
    height: 32px;
    font-size: 68px;
    line-height: 40px;
    text-align: center;

    &:before {
      content: "+";
      position: absolute;
      top: -3px;
      left: -7px;
    }
  }
}

button.close {
  color: #f00;
  cursor: pointer;
}

#connection-status {
  background: #000;
  bottom: 10px;
  color: #fff;
  font-size: 1.2em;
  opacity: 0.99;
  padding: 5px;
  position: fixed;
  right: 10px;
  z-index: 3;
}
